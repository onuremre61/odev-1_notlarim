				var menu = document.querySelector('.menu');
				var scrollPosition = window.scrollY;
			  
				if (scrollPosition > 100) { // Belirli bir kaydırma mesafesine ulaşıldığında menüyü kaydır
				  menu.style.top = '-50px'; // Menüyü yukarı kaydır (gizle)
				} else {
				  menu.style.top = '0'; // Menüyü aşağı kaydır (göster)
				}
